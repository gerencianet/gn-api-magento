<config>
    <modules>
        <Gerencianet_Transparent>
            <version>2.0.0</version>
        </Gerencianet_Transparent>
    </modules>

    <global>
        <models>
            <gerencianet_transparent>
                <class>Gerencianet_Transparent_Model</class>
                <resourceModel>gerencianet_transparent_mysql4</resourceModel>
            </gerencianet_transparent>
            <gerencianet_transparent_mysql4>
                <class>Gerencianet_Transparent_Model_Mysql4</class>
                <entities>
                    <notifications>
                        <table>gerencianet_notifications</table>
                    </notifications>
                    <webhook>
                        <table>gerencianet_webhook</table>
                    </webhook>
                </entities>
            </gerencianet_transparent_mysql4>
        </models>
        <helpers>
            <gerencianet_transparent>
                <class>Gerencianet_Transparent_Helper</class>
            </gerencianet_transparent>
        </helpers>
        <blocks>
            <gerencianet_transparent>
                <class>Gerencianet_Transparent_Block</class>
            </gerencianet_transparent>
        </blocks>
        <resources>
            <gerencianet_transparent_setup>
                <setup>
                    <module>Gerencianet_Transparent</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
                <gerencianet_transparent_write>
                    <connection>
                        <use>core_write</use>
                    </connection>
                </gerencianet_transparent_write>
                <gerencianet_transparent_read>
                    <connection>
                        <use>core_read</use>
                    </connection>
                </gerencianet_transparent_read>
            </gerencianet_transparent_setup>
        </resources>
    </global>

    <default>
        <payment>
            <gerencianet_transparent>
                <active>1</active>
                <model>gerencianet_transparent/standard</model>
                <title>Gerencianet</title>
                <allowspecific>0</allowspecific>
            </gerencianet_transparent>
            <gerencianet_card>
                <active>1</active>
                <model>gerencianet_transparent/card</model>
                <title>Cartão de Crédito</title>
                <allowspecific>0</allowspecific>
                <cctypes>VI,MC,AE,DI</cctypes>
                <payment_action>authorize</payment_action>
            </gerencianet_card>
            <gerencianet_billet>
                <active>1</active>
                <model>gerencianet_transparent/billet</model>
                <allowspecific>0</allowspecific>
                <duedate>0</duedate>
                <fine>0</fine>
                <interest>0</interest>
                <title>Boleto Bancário</title>
                <payment_action>authorize</payment_action>
            </gerencianet_billet>
            <gerencianet_pix>
                <active>1</active>
                <model>gerencianet_transparent/pix</model>
                <allowspecific>0</allowspecific>
                <duedate>0</duedate>
                <fine>0</fine>
                <interest>0</interest>
                <title>Pix</title>
                <payment_action>authorize</payment_action>
            </gerencianet_pix>
        </payment>
    </default>

    <frontend>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>frontendPrepareLayoutBefore</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <sales_order_place_after>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>updatecharge</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </sales_order_place_after>
            <sales_order_payment_place_end>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>setNew</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </sales_order_payment_place_end>
        </events>
        <routers>
            <gerencianet_transparent>
                <use>standard</use>
                <args>
                    <module>Gerencianet_Transparent</module>
                    <frontName>gerencianet</frontName>
                </args>
            </gerencianet_transparent>
        </routers>
        <layout>
            <updates>
                <gerencianet_transparent>
                    <file>gerencianet_transparent.xml</file>
                </gerencianet_transparent>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <Gerencianet_Transparent_Model_Observer>
                        <type>singleton</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>checkConfigurations</method>
                    </Gerencianet_Transparent_Model_Observer>
                </observers>
            </admin_system_config_changed_section_payment>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>prepareLayoutBefore</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>adminPrepareLayoutBefore</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <sales_order_place_after>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>updatecharge</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </sales_order_place_after>
            <sales_order_payment_place_end>
                <observers>
                    <gerencianet_transparent_updatecharge>
                        <type>model</type>
                        <class>gerencianet_transparent/observer</class>
                        <method>setNew</method>
                    </gerencianet_transparent_updatecharge>
                </observers>
            </sales_order_payment_place_end>
        </events>
        <routers>
            <gerencianet_transparent>
                <use>standard</use>
                <args>
                    <module>Gerencianet_Transparent</module>
                    <frontName>gerencianet</frontName>
                </args>
            </gerencianet_transparent>
        </routers>
        <layout>
            <updates>
                <gerencianet_transparent>
                    <file>gerencianet_transparent.xml</file>
                </gerencianet_transparent>
            </updates>
        </layout>
        <adminhtml_system_config_edit>
            <reference name="content">
                <block type="adminhtml/notification_curl" name="notification_curl" as="notification_curl" template="notification/tls.phtml"/>
            </reference>
        </adminhtml_system_config_edit>
    </adminhtml>

    <crontab>
        <jobs>
            <gerencianet_transparent_updater>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>gerencianet_transparent/updater::updatecharge</model>
                </run>
            </gerencianet_transparent_updater>
        </jobs>
    </crontab>
</config>
